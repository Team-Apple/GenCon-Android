<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GenConFont.Base" parent="TextAppearance.AppCompat" />
    
    <style name="GenConFont.Base.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="GenConFont.Base.Body">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="GenConFont.Base.Body.Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GenConFont.Base.SubHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_subheading</item>
    </style>

    <style name="GenConFont.Base.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

</resources>
