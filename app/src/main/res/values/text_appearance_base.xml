<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GenConFont.Base" parent="TextAppearance.AppCompat" />

    <style name="GenConFont.Base.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/general_text_caption</item>
    </style>

    <style name="GenConFont.Base.Body">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/general_text_body</item>
    </style>

    <style name="GenConFont.Base.SubHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/general_text_subheading</item>
    </style>

    <style name="GenConFont.Base.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/general_text_title</item>
    </style>

    <style name="GenConFont.Base.Title.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GenConFont.Base.Title.Bold">
       <item name="android:textStyle">bold</item>
    </style>

    <style name="GenConFont.Base.Title.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GenConFont.Base.HeadLine">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/general_text_headline</item>
    </style>

    <style name="GenConFont.Base.HeadLine.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
