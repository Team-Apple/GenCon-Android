<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.AppCompat.Light" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textAppearance="@style/TextAppearance.Base.Subhead.Bold"
                android:textColor="@color/white"
                tools:text="なんかのよてい" />

        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/start_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/start_at"
                android:textAppearance="@style/TextAppearance.Base.Caption"
                android:textColor="@color/grey_500" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/start_date_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:enabled="false"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.Base.Title"
                android:textColor="@color/grey_500"
                app:layout_constraintHorizontal_weight="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/start_time_edit_text"
                app:layout_constraintTop_toBottomOf="@id/start_at" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/start_time_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:enabled="false"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.Base.Title"
                android:textColor="@color/grey_500"
                app:layout_constraintHorizontal_weight="0.4"
                app:layout_constraintLeft_toRightOf="@id/start_date_edit_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start_at" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/end_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/end_at"
                android:textAppearance="@style/TextAppearance.Base.Caption"
                android:textColor="@color/grey_500"
                app:layout_constraintTop_toBottomOf="@id/start_date_edit_text" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/end_date_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:enabled="false"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.Base.Title"
                android:textColor="@color/grey_500"
                app:layout_constraintHorizontal_weight="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/end_time_edit_text"
                app:layout_constraintTop_toBottomOf="@id/end_at" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/end_time_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:enabled="false"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.Base.Title"
                android:textColor="@color/grey_500"
                app:layout_constraintHorizontal_weight="0.4"
                app:layout_constraintLeft_toRightOf="@id/end_date_edit_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/end_at" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/memo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/memo"
                app:layout_constraintTop_toBottomOf="@id/end_date_edit_text" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/memo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
