<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/tasks_swipe_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tasks_recycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/recycler_view_bottom_padding"
                android:paddingTop="@dimen/recycler_view_top_padding"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tasks_inactive_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/grey_400"
            app:layout_constraintBottom_toTopOf="@id/tasks_inactive_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_task_black_24dp" />

        <TextView
            android:id="@+id/tasks_inactive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_not_exist"
            android:textAppearance="@style/TextAppearance.Base.Title"
            android:textColor="@color/grey_400"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tasks_inactive_image" />

        <android.support.constraint.Group
            android:id="@+id/tasks_inactive_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tasks_inactive_image,tasks_inactive_title"
            tools:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/tasks_fab"
            style="@style/Widget.Design.FloatingActionButton.Margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:tint="@color/white"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</layout>
