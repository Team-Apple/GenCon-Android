<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:compactCalendarBackgroundColor="@color/colorPrimary"
            app:compactCalendarCurrentDayBackgroundColor="@color/grey_2300"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/grey_800"
            app:compactCalendarTextColor="@color/white"
            app:compactCalendarTextSize="14sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
