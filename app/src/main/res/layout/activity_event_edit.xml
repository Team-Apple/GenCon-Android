<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingStart="@dimen/dimen_16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_send_black_24dp"
                    android:tint="@color/white" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.AppCompatEditText
            style="@style/GenConFont.Base.Title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:hint="@string/event_edit_hint_text"
            android:paddingEnd="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:textColorHint="@color/white">

            <requestFocus />
        </android.support.v7.widget.AppCompatEditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_form_item_height"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_schedule_black_24dp"
                android:tint="@color/grey_600" />

            <TextView
                style="@style/GenConFont.Base.Body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:text="@string/common_date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_form_item_height"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/startDayText"
                style="@style/GenConFont.Base.Body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_weight="7"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                tools:text="2017/11/3" />

            <TextView
                android:id="@+id/startTimeText"
                style="@style/GenConFont.Base.Body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                tools:text="10:20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_form_item_height"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/endDayText"
                style="@style/GenConFont.Base.Body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_weight="7"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                tools:text="2017/11/3" />

            <TextView
                android:id="@+id/endTimeText"
                style="@style/GenConFont.Base.Body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                tools:text="10:20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_form_item_height"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_message_black_24dp"
                android:tint="@color/grey_600" />

            <TextView
                style="@style/GenConFont.Base.Body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:text="@string/common_memo" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/memoEditText"
            style="@style/GenConFont.Base.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:minHeight="@dimen/dimen_48dp" />

    </LinearLayout>
</layout>
