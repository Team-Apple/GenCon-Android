<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.main.MainActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="@dimen/dimen_32dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextAppearance="@style/GenConFont.Base.Title.Bold.White" />
        </android.support.design.widget.AppBarLayout>

        <com.github.teamapple.widget.FixedViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_fab_margin"
            android:src="@drawable/ic_create_black_24dp"
            android:tint="@color/white"
            app:fabSize="normal"
            app:layout_anchor="@+id/bottom_navigation"
            app:layout_anchorGravity="bottom|end"
            app:layout_insetEdge="bottom"
            app:layout_behavior="@string/floating_action_button_behavior"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@color/bottom_navigation"
            app:itemTextColor="@color/bottom_navigation"
            app:menu="@menu/bottom_navigation"
            app:layout_behavior="@string/bottom_navigation_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
